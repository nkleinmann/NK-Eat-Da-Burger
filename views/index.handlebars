<header class="header">
  <h1 class="text-center">Burgers!</h1>
</header>


<div class="body">

  <section class="container-fluid">
    <div class="row">
      <section class="col-12">
        {{!-- <h2 class="d-flex justify-content-center">Delicious Burgers!</h2> --}}
      </section>
    </div>

    <div class="row justify-content-center">
      <div class="col-3 ml-1 card">
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>{{this.burger_name}}</li>
        {{/unless}}
        {{/each}}
      </ul>
      </div>

      <div class="col-3 ml-4 card">
        <h3>
          second box
        </h3>
      </div>



    </div>


  </section>

  <div class="row form justify-content-center">
    <div class="col-8 form-group mt-5 text-center">
      <button for="newBurger" class="btn btn-danger mb-3">Devour it!</button><br>
      <input type="burger" name="devour" value="Burger" class="input" checked> Devoured!<br>
      <button type="submit" class="btn btn-primary mt-3 submit" name="devour" value="0"> Submit</button>
      <p>Enter a burger you would like to eat and click submit.</p>
    </div>
    
  </div>

  <div class="row">

    

  </div>

</div>




